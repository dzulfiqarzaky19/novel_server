{
  "name": "novel_scrapper",
  "version": "1.1.0",
  "description": "A web novel scraper using Fastify + Puppeteer + TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "bundle": "esbuild dist/index.js --bundle --platform=node --format=esm --target=node20 --outfile=bundle/index.mjs --minify --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\"",
    "prodbuild": "npm run build && npm run bundle",
    "start": "node dist/index.js",
    "start:bundle": "node bundle/index.mjs",
    "clean": "rm -rf dist bundle"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/redis": "^7.1.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "puppeteer": "^24.23.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.7",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  }
}
